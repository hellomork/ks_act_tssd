<template>
  <div class="login-container">
    <el-form ref="loginForm" :model="loginForm" :rules="loginRules" class="login-form" auto-complete="on" label-position="left">
      <div class="title-container">
        <h3 class="title">用户登录</h3>
      </div>
      <el-form-item prop="mobile">
        <span class="svg-container">
          <svg-icon icon-class="user"  class-name='custom-class' />
        </span>
        <el-input
          ref="username"
          v-model="loginForm.mobile"
          placeholder="用户名"
          name="mobile"
          type="text"
          tabindex="1"
          auto-complete="on"
        />
      </el-form-item>
      <el-form-item prop="pwd">
        <span class="svg-container">
          <svg-icon icon-class="password" />
        </span>
        <el-input
          :key="passwordType"
          ref="password"
          v-model="loginForm.pwd"
          :type="passwordType"
          placeholder="请输入密码"
          name="pwd"
          tabindex="2"
          auto-complete="on"
          @keyup.enter.native="handleLogin"
        />
        <span class="show-pwd" @click="showPwd">
          <svg-icon :icon-class="passwordType === 'password' ? 'eye' : 'eye-open'" />
        </span>
      </el-form-item>
      <el-form-item label class="code" prop="verifyCodes">
        <el-input v-model="loginForm.verifyCodes" placeholder="验证码" @keyup.enter.native="handleLogin"></el-input>
        <div class="code-img" @click="changePic">
          <img :src="codeSrc" />
          <span>看不清换一张</span>
        </div>
      </el-form-item>
      <el-button :loading="loading" type="primary" style="width:100%;margin-bottom:30px;" @click.native.prevent="handleLogin">登录</el-button>
    </el-form>
  </div>
</template>

<script>
import { mapGetters } from 'vuex'
export default {
  computed: {
    ...mapGetters(['userinfologin'])
  },
  name: 'Login',
  data() {
    return {
      loginForm: {
        account: '',
        pwd: ''
      },
      loginRules: {
        account: [
          { required: true, message: '请输入用户名', trigger: 'blur' }
        ],
        pwd: [{ required: true, message: '请输入密码', trigger: 'blur' }]
      },
      loading: false,
      passwordType: 'password',
      redirect: undefined,
      codeSrc: ''
    }
  },
  methods: {
    hasLogin(callback) {
      if (this.userinfologin) {
        window.location.href = window.location.origin + '/21tssd/pics_list'
        return
      }
      if (callback) {
        callback()
      }
    },
    showPwd() {
      if (this.passwordType === 'password') {
        this.passwordType = ''
      } else {
        this.passwordType = 'password'
      }
      this.$nextTick(() => {
        this.$refs.password.focus()
      })
    },
    changePic() {
      const params = {}
      params.timeStamp = new Date().getTime()
      const _this = this
      this.$apis.getLoginPic(params).then(res => {
        _this.codeSrc = res.data.data.list[0]
      })
    },
    handleLogin() {
      const _this = this
      this.$refs['loginForm'].validate(valid => {
        if (valid) {
          // this.loading = true
          var parm = {}
          parm.mobile = this.loginForm.mobile
          parm.pwd = this.loginForm.pwd
          parm.verifyCodes = this.loginForm.verifyCodes.toLocaleUpperCase()
          this.$apis.login(parm).then(res => {
            if (res.data.status.returnCode === 307) {
              _this.$message.error('验证码输入错误')
              _this.changePic()
              return false
            } else if (res.data.status.returnCode === 303) {
              _this.$message.error('密码错误')
              _this.changePic()
              return false
            } else if (res.data.status.returnCode === 301) {
              _this.$message.error('账号不存在')
              _this.changePic()
              return false
            } else if (res.data.status.returnCode === 348) {
              _this.$message.error('密码错误已达3次，已锁定，请3分钟后再次登录')
              _this.changePic()
              return false
            } else if (res.data.status.returnCode === 306) {
              _this.$message.error('验证码为空！')
              _this.changePic()
              return false
            }
            _this.$message.success('登录成功')
            window.sessionStorage.setItem('hasLogin', 1)
            setTimeout(() => {
              window.location.href = window.location.origin + '/21tssd/pics_list'
            }, 1500)
            // window.location.reload()
          })
        } else {
          return false
        }
      })
    }
  },
  created() {
    this.hasLogin(() => {
      this.changePic()
    })
  }
}
</script>

