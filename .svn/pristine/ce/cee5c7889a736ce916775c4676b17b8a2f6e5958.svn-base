@import "./wxindex.scss";
@import "./variables.scss";

* {
  word-wrap: break-word;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding: 0;
  margin: 0;
  font-size: initial;
  line-height: 1;
}

.spec {
  padding-bottom: 50px !important
}
.spec_top{
  padding-top: 35px !important
}

body {
  background-color: #FBF3F1;
}

@media screen and (min-width: 751px) {

  .act-container {
    width: 1200px;
    margin: 0 auto;
  }

  .clearfix {
    &:after {
      visibility: hidden;
      display: block;
      font-size: 0;
      content: " ";
      clear: both;
      height: 0;
    }
  }

  .list_fix1 {
    position: absolute;
    // top: 50px;
    top: 10px;
    width: 80px;
    height: 30px;
    border-radius: 0px 15px 15px 0;
    color: white;
    text-align: center;
    font-size: 12px;
    line-height: 30px;
    background-color: rgba($color: #000000, $alpha: 0.7);
  }

  .l-body {
    .prev {
      width: 72px;
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
      height: 72px;
      cursor: pointer;
      border-radius: 50%;
      background-color: black;

      img {
        width: 18px;
        height: 20px;
        text-align: center;
        margin-top: 25px;
      }
    }

    .next {
      width: 72px;
      height: 72px;
      position: absolute;
      right: 10px;
      cursor: pointer;
      top: 50%;
      transform: translateY(-50%);
      border-radius: 50%;
      background-color: black;

      img {
        width: 18px;
        height: 20px;
        text-align: center;
        margin-top: 25px;
      }
    }
  }

