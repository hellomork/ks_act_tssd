            <li v-for="(item, index) in kaOperateContentList" :key="item.indexId">
          <div class="fengmian" >封面图上传</div>
          <UploadCover
            :fileType="2"
            @uploadSuccess="uploadSuccess"
            @delete="deleteWx"
