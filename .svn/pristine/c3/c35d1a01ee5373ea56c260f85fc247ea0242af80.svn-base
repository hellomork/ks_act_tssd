              if (that.fileType === 1) {
                item.status = 'ready'
              } else {
                item.status = 'uploading'
              }
              item.message = '上传中...'
              var getSuffix = function(fileName) {
                var pos = fileName.lastIndexOf('.')
                var suffix = ''
                if (pos !== -1) {
                  suffix = fileName.substring(pos)
                }
                return suffix
              }
              var filename = Date.parse(new Date()) + '_' + this.random_string(6) + getSuffix(item.file.name)
              // this.ossParams.dir + '/' +
              console.log('item', item, item.file.name)
              var formData = new FormData()
              // 注意formData里append添加的键的大小写
              formData.append('key', filename) // 存储在oss的文件路径
              formData.append('OSSAccessKeyId', this.ossParams.accessid) // accessKeyId
              formData.append('policy', this.ossParams.policy) // policy
              formData.append('Signature', this.ossParams.signature) // 签名
              // 如果是base64文件，那么直接把base64字符串转成blob对象进行上传就可以了
              formData.append('file', item.file)
              formData.append('success_action_status', 200) // 成功后返回的操作码
              var url = this.ossParams.host
              var fileUrl = this.ossParams.oss_domain + '/' + filename
              $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                success: function(data) {
                  item.percentage = 100
                  item.status = 'success'
                  item.message = '上传成功'
                  that.$emit('uploadSuccess', fileUrl, item.file, that.subscript)
                },
                error: function(data) {
                  console.log(data)
                  item.status = 'failed'
                  item.message = '上传失败'
                }
              })
            })
          })
