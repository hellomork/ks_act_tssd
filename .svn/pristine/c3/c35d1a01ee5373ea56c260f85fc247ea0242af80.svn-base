                file.status = 'success'
                file.message = '上传成功'
                that.$emit('uploadSuccess', fileUrl, file.file.uid, that.subscript)
              },
              error: function(data) {
                console.log(data)
                file.status = 'failed'
                file.message = '上传失败'
              }
            })
          })
