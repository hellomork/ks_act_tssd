        <div class="back">
          <img src="@/assets/imgwx/backlogo.png" alt="">
        </div>
    </div>
       <!--微信分享指示-->
    <div class="hom-sharewraper" id="hom-sharewraper" style="display:none" @click="closedAlert();">
      <img src="@/assets/imgwx/share-alert.png" />
    </div>
  </div>
